<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:backgroundTint="@color/material_dynamic_neutral90"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="96dp"
        app:cardBackgroundColor="@color/card_bg_color_neutral"
        app:cardCornerRadius="24dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginHorizontal="24dp">

            <TextView
                android:id="@+id/hi_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/poppinsblack"
                android:lineSpacingMultiplier="0.85"
                android:text="@string/hi"
                android:textSize="50sp"
                android:textColor="?android:attr/textColorPrimary"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/hi_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="32dp"
                android:fontFamily="@font/poppinslight"
                android:text="Tugas Pengembangan Aplikasi Bergerak"
                android:textSize="14sp"
                android:justificationMode="inter_word"
                tools:ignore="HardcodedText" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="18dp"
                android:fontFamily="@font/poppinsmedium"
                android:lineSpacingMultiplier="0.85"
                android:text="Made with &lt;3 by"
                android:textSize="14sp"
                android:textColor="?android:attr/textColorPrimary"
                android:justificationMode="inter_word"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/about_me"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    app:strokeWidth="0dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="99dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        tools:ignore="ContentDescription" />

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/about_prisca"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginStart="-18dp"
                    app:strokeWidth="0dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="99dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        tools:ignore="ContentDescription" />

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/about_lina"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginStart="-18dp"
                    app:strokeWidth="0dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="99dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        tools:ignore="ContentDescription" />

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/about_faisal"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginStart="-18dp"
                    app:strokeWidth="0dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="99dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        tools:ignore="ContentDescription" />

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/poppinsmedium"
                android:lineSpacingMultiplier="0.85"
                android:text="Supported by :"
                android:textSize="14sp"
                android:textColor="?android:attr/textColorPrimary"
                android:justificationMode="inter_word"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/logo1"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    app:cardBackgroundColor="@color/material_dynamic_neutral_variant50"
                    app:cardCornerRadius="18dp"
                    app:strokeWidth="0dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:tint="@color/material_dynamic_neutral_variant50"
                        tools:ignore="ContentDescription,UseAppTint" />
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/logo2"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginStart="8dp"
                    app:cardBackgroundColor="@color/material_dynamic_neutral_variant50"
                    app:cardCornerRadius="18dp"
                    app:strokeWidth="0dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:tint="@color/material_dynamic_primary30"
                        tools:ignore="ContentDescription,UseAppTint" />
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>